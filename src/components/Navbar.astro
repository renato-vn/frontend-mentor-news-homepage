---
import Logo from "../assets/images/logo.svg"
import IconClose from "../assets/images/icon-menu-close.svg"
import IconOpen from "../assets/images/icon-menu.svg"
import NavbarItems from "./NavbarItems.astro"
---

<nav class="flex justify-between items-center mb-6 relative z-40">
  <a href="/">
    <Logo />
  </a>

  <NavbarItems isHorizontal />

  <IconOpen id="open-btn" class="cursor-pointer lg:hidden" />
  
  <div id="menu-modal" class="bg-black/50 fixed inset-0 hidden z-50">
    <div class="flex flex-col bg-Off-white absolute right-0 w-64 h-screen px-5.25 py-6.75 z-50">
      <IconClose id="close-btn" class="self-end cursor-pointer z-50" />
      <NavbarItems />
    </div>
  </div>
</nav>


<script>
    document.addEventListener("astro:page-load", () => {
      const closeBtn = document.getElementById("close-btn");
      const openBtn = document.getElementById("open-btn");
      const modal = document.getElementById("menu-modal");
      const menuItems = document.querySelectorAll("a");
    
      closeBtn?.addEventListener("click", () => {
        modal?.classList.add("hidden");
      })
    
      openBtn?.addEventListener("click", () => {
        modal?.classList.remove("hidden");
      })
    
      menuItems.forEach(item => {
        item.addEventListener("click", () => {
          modal?.classList.add("hidden")
        })
      })
    })
</script>